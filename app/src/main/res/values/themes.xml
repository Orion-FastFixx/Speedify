<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Speedify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="MonaLight12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mona_sans_light</item>
    </style>

    <style name="MonaRegular14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mona_sans_regular</item>
    </style>

    <style name="MonaMedium12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mona_sans_medium</item>
    </style>

    <style name="MonaMedium14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mona_sans_medium</item>
    </style>

    <style name="MonaSemiBold12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mona_sans_semibold</item>
    </style>

    <style name="MonaSemiBold14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mona_sans_semibold</item>
    </style>

    <style name="MonaSemiBold16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mona_sans_semibold</item>
    </style>

    <style name="MonaSemiBold20">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mona_sans_semibold</item>
    </style>

    <style name="MonaBold10">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mona_sans_bold</item>
    </style>

    <style name="MonaBold20">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mona_sans_bold</item>
    </style>

    <style name="bottomNavbar">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/mona_sans_medium</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/mona_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>




<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:paddingHorizontal="15dp"
    tools:context=".feature_consultation.presentation.order_montir.orderMontir">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/sv_detail_pesanan"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="ID Pesanan"
                android:textColor="@color/tertiary"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mona_sans_regular"
                    android:text="A-5DCWKF6WWHLS"
                    android:textColor="@color/light_grey"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:gravity="end"/>

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/ic_copy"
                    android:layout_weight="1"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPesanan"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:src="@drawable/montir"
                app:shapeAppearanceOverlay="@style/circleImg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jenisMontir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/mona_sans_semibold"
                    android:text="Montir Umum"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/namaMontir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/mona_sans_regular"
                    android:text="Dipesan"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/layout2"/>


        <TextView
            android:id="@+id/ringkasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mona_sans_semibold"
            android:text="Rincian Pesanan"
            android:textColor="@color/tertiary"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"/>


        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ringkasan">

            <TextView
                android:id="@+id/layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Konsultasi"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="start"/>

            <TextView
                android:id="@+id/hargalayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Rp. 35000"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout4">

            <TextView
                android:id="@+id/subTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Subtotal"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="start"/>

            <TextView
                android:id="@+id/hargasub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Rp. 35000"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout5">

            <TextView
                android:id="@+id/tambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Biaya Admin"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="start"/>

            <TextView
                android:id="@+id/hargaTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:text="Rp. 2000"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout6">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_semibold"
                android:text="Total"
                android:textColor="@color/tertiary"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="start"/>

            <TextView
                android:id="@+id/hargaTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_semibold"
                android:text="Rp. 37000"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/layout7"/>

        <TextView
            android:id="@+id/bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mona_sans_semibold"
            android:text="Metode Pembayaran"
            android:textColor="@color/tertiary"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"/>


        <LinearLayout
            android:id="@+id/layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/bill">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logo_wallet"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_bill"
                app:shapeAppearanceOverlay="@style/circleImg"
                />

            <TextView
                android:id="@+id/metodePembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/mona_sans_medium"
                android:text="OVO"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="8"
                android:gravity="start"/>

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="@string/icon"
                android:src="@drawable/btn_back"
                android:layout_weight="1"
                android:gravity="end"/>


        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/layout8"/>

        <Button
            android:id="@+id/btn_detail_pesanan"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:fontFamily="@font/mona_sans_semibold"
            android:text="Bayar"
            android:textSize="14dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_detail_pesanan" />


</androidx.constraintlayout.widget.ConstraintLayout>
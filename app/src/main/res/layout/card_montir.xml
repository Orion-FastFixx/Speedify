<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5sp"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3sp">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/jenisMontir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mona_sans_bold"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:text="Montir Umum">
        </TextView>

        <TextView
            android:id="@+id/namaMontir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:fontFamily="@font/mona_sans_medium"
            android:textColor="@color/tertiary"
            android:textSize="14sp"
            android:text="Reza Rizki">
        </TextView>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:textColor="@color/tertiary"
                android:textSize="14sp"
                android:text="Rating: ">
            </TextView>

            <TextView
                android:id="@+id/Jlhrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:textColor="@color/tertiary"
                android:textSize="14sp"
                android:text="5.0 ">
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/mona_sans_bold"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:text="Rp.35.000">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="100sp">

        <ImageView
            android:id="@+id/imontir"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginStart="50sp"
            android:scaleType="centerInside"
            android:background="@drawable/ellipse"
            android:layout_gravity="clip_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:fontFamily="@font/mona_sans_medium"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Konsultasi">
        </Button>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
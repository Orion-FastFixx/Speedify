<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/second"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMontir"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_gravity="clip_horizontal"
                android:src="@drawable/montir2"
                android:background="@drawable/ellipse"
                android:scaleType="centerCrop"
                android:outlineProvider="background"
                android:clipToOutline="true"/>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10sp">

                <TextView
                    android:id="@+id/jenisMontir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mona_sans_bold"
                    android:textColor="@color/tertiary"
                    android:textSize="16sp"
                    android:text="Montir Umum"/>
                <TextView
                    android:id="@+id/namaMontir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:fontFamily="@font/mona_sans_medium"
                    android:textColor="@color/tertiary"
                    android:textSize="14sp"
                    android:text="Reza Rizki"/>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="1dp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/ic_star_fill" />

                    <TextView
                        android:id="@+id/jlhRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/mona_sans_medium"
                        android:textColor="@color/tertiary"
                        android:textSize="14sp"
                        android:text="4.5"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/ic_work" />

                    <TextView
                        android:id="@+id/pengalaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/mona_sans_medium"
                        android:textColor="@color/tertiary"
                        android:textSize="14sp"
                        android:text="10"/>

                    <TextView
                        android:id="@+id/ketPengalaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/mona_sans_medium"
                        android:textColor="@color/tertiary"
                        android:textSize="14sp"
                        android:text="Tahun"/>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/mona_sans_medium"
            android:textSize="16sp"
            android:text="Rp. "/>

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/mona_sans_medium"
            android:textSize="16sp"
            android:text="35.000 "/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/jlhCostumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_bold"
                android:textSize="14sp"
                android:text="100"/>

            <TextView
                android:id="@+id/ketCostumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:fontFamily="@font/mona_sans_medium"
                android:textSize="14sp"
                android:text="Costumer sudah melakukan chat"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
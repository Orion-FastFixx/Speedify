<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature_bengkel.presentation.checkout_bengkel.CheckoutBengkelActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_header_title_checkout_bengkel"
            style="@style/MonaSemiBold16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10.5dp"
            android:text="@string/example_title_detail_bengkel"
            android:textColor="@color/charleston_green"
            app:layout_constraintStart_toEndOf="@+id/ic_back"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_one_checkout_bengkel"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="-16dp"
            app:dividerColor="@color/cultured"
            app:dividerThickness="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_back" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_bengkel_checkout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/example_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_one_checkout_bengkel" />

        <LinearLayout
            android:id="@+id/ll_info_checkout_bengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/civ_bengkel_checkout"
            app:layout_constraintTop_toBottomOf="@+id/divider_one_checkout_bengkel">

            <TextView
                android:id="@+id/tv_name_bengkel_checkout"
                style="@style/MonaSemiBold20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sriwijaya Motor"
                android:textColor="@color/charleston_green" />

            <TextView
                android:id="@+id/tv_type_bengkel_checkout"
                style="@style/MonaRegular14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Bengkel Mobil" />

        </LinearLayout>

        <include
            android:id="@+id/order_summary"
            layout="@layout/detail_bengkel_section_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_info_checkout_bengkel" />

        <TextView
            android:id="@+id/tv_order_summary"
            style="@style/MonaRegular14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Layanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_summary" />

        <TextView
            style="@style/MonaMedium14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nominal"
            android:textColor="@color/brandeis_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_summary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_services"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_summary"
            tools:listitem="@layout/item_services_component" />

        <include
            android:id="@+id/location"
            layout="@layout/detail_bengkel_section_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_item_services" />

        <LinearLayout
            android:id="@+id/ll_user_location_checkout_bengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-5dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tv_user_location_checkout_bengkel"
                style="@style/MonaSemiBold14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Jl. Raya Ciputat No. 1, Jakarta Selatan"
                android:textColor="@color/dim_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_location_checkout_bengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Detail Lokasi (Patokan)"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_user_location_checkout_bengkel" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleDetailLocationEditTextLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_location_checkout_bengkel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleDetailLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_user_fullname_checkout_bengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleDetailLocationEditTextLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleFullnameEditTextLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_fullname_checkout_bengkel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleFullnameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_detail_complaint_checkout_bengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Detail Keluhan"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleFullnameEditTextLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleDetailComplaintEditTextLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_complaint_checkout_bengkel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleDetailComplaintEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/payment_method"
            layout="@layout/detail_bengkel_section_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleDetailComplaintEditTextLayout" />

        <ImageView
            android:id="@+id/ic_payment_method"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_cash"
            android:contentDescription="@string/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_method" />

        <TextView
            android:id="@+id/tv_nominal_payment_method"
            style="@style/MonaRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:text="Cash"
            android:textColor="@color/charleston_green"
            app:layout_constraintStart_toEndOf="@+id/ic_payment_method"
            app:layout_constraintTop_toBottomOf="@+id/payment_method" />

        <ImageView
            android:id="@+id/ic_arrow_right_payment_method"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_arrow_right_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_method" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_two_checkout_bengkel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:dividerColor="@color/american_silver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_payment_method" />

        <TextView
            android:id="@+id/tv_total"
            style="@style/MonaRegular18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_two_checkout_bengkel" />

        <TextView
            style="@style/MonaSemiBold18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Rp100.000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_two_checkout_bengkel" />

        <Button
            android:id="@+id/btn_pay_checkout_bengkel"
            android:layout_width="312dp"
            android:layout_height="60dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="@color/cinnabar"
            android:text="Bayar"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_pay_checkout_bengkel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

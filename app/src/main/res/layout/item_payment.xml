<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <LinearLayout
        android:id="@+id/methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo_wallet"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_bill"
            app:shapeAppearanceOverlay="@style/circleImg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="6"
            android:gravity="start">

            <TextView
                android:id="@+id/metodePembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/mona_sans_medium"
                android:text="OVO"
                android:textColor="@color/tertiary"
                android:textSize="14dp"
                android:layout_weight="8"
                android:gravity="start"/>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/mona_sans_regular"
                android:text="Saldo   Rp6.769.000"
                android:textSize="12dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:button="@drawable/unchecked"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    android:layout_marginBottom="26dp"
    app:cardCornerRadius="10sp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPesanan"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:scaleType="centerCrop"
            android:src="@drawable/pesanan2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_regular"
                android:textSize="12sp"
                android:text="12 Juli 2023"/>

            <TextView
                android:id="@+id/namaBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_semibold"
                android:layout_marginStart="160sp"
                android:textSize="12sp"
                android:text="Sriwijaya Mobil"
                android:maxLines="1"
                android:ellipsize="end"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/kendala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:fontFamily="@font/mona_sans_bold"
            android:textSize="16sp"
            android:text="Ganti Spare Part, Ban Kempes, Mesin Mati"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:textSize="14sp"
                android:text="Rp. "/>

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mona_sans_medium"
                android:textSize="14sp"
                android:text="35.000 "/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mona_sans_regular"
            android:textSize="12sp"
            android:text="Kode Konfirmasi: "/>

        <TextView
            android:id="@+id/codeConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mona_sans_semibold"
            android:textSize="12sp"
            android:text="122233"/>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>